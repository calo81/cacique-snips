<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Cacique Snips" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "App_Name" %>">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <style type="text/css">
      html,
      body {
          height: 100%;
      }
      #main {
          min-height: 100%;
          height: auto !important;
          height: 100%;
          margin: 0 auto -60px;
      }
      #push,
      #footer {
          height: 100px;
      }
      #footer {
          background-color: #f5f5f5;
          text-align: center;;
      }
      @media (max-width: 767px) {
          #footer {
              margin-left: -20px;
              margin-right: -20px;
              padding-left: 20px;
              padding-right: 20px;
          }
      }
  </style>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<header>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "cacique-snips", snippets_path,  :class => 'brand' %>
        <div class="nav-collapse collapse">
          <p class="navbar-text pull-right">
            <% if user_signed_in? %>
                Signed in as <%= current_user.email %>
                <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
            <% else %>
                <%= link_to "Sign up", new_user_registration_path %>
                <%= link_to "Sign in", new_user_session_path %>
            <% end %>
          </p>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
</header>
<div id="main" role="main">
  <div class="container">
    <div class="content">
      <div class="row">
        <div class="span12">
          <br/>  <br/><br/><br/><br/>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <br/>
          <%= yield %>
        </div>
      </div>
    </div>
  </div> <!--! end of .container -->
  <div id="push"></div>
</div> <!--! end of #main -->
<div id="footer">
  <div class="container">
    <p class="muted credit"><%= image_tag 'cacique.png' %> Copyright (c) 2012 Cacique Technologies LTD</p>
  </div>
</div>
</body>
</html>