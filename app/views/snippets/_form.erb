<%= form_for @snippet do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :language %>
    <%= f.select(:language, languages) %>
    <%= f.label :snippet %>
    <%= f.text_area :snippet %>
    <%= f.label :public %>
    <%= f.check_box :public %>
    <br/>
    <%= f.submit %>
<% end %>